%html
  %head
    %title RottenPotatoes!
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    #main
      - flash.each do |type, msg|
        %div
          = msg
      = yield
      - if session[:user_id]
        = link_to 'Logout', '/sessions/logout', method: :delete
      - else
        = link_to 'Login with Google', '/auth/google_oauth2'

        
      

